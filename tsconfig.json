{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",

    /* Modules */
    "module": "es2022",
    "moduleResolution": "node",

    "rootDirs": ["./src", "./test"], 

    "baseUrl": "./src",
    "paths": {
      "@theme-jie/*": ["*"],
    },

    /* Emit */
    "sourceMap": true, 
    "outDir": "./out",
    "newLine": "lf",  

    /* Interop Constraints */
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 

    /* Type Checking */
    "strict": true,
    
    /* Completeness */
    "skipLibCheck": false
  }
}
